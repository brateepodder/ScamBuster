<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="#ffffff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/messagesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bubble_outgoing"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageTextView"
            android:layout_alignStart="@id/messageTextView"
            android:layout_marginTop="1sp"
            android:textColor="#707070"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateTextView"
            android:layout_alignStart="@id/dateTextView"
            android:textColor="#808080"
            android:textSize="11.1sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ratingRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:background="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:width="@id/messagesRelativeLayout">

        <Button
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="5dp"
            android:height="2dp"
            android:backgroundTint="#ef476f"
            android:includeFontPadding="false"
            android:maxHeight="8dp"
            android:minWidth="72dp"
            android:text="8/10"
            android:textSize="12sp"
            app:iconPadding="3dp" />

    </RelativeLayout>


</RelativeLayout>